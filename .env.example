# n8n Configuration
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_SECURE_COOKIE=true
GENERIC_TIMEZONE=Asia/Kolkata

# Webhook URL (set to your Render service URL)
WEBHOOK_URL=https://your-n8n-instance.onrender.com/

# n8n Encryption Key (generate a random string)
N8N_ENCRYPTION_KEY=change-me-to-a-random-string

# Basic Auth (set your own credentials)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me-to-a-strong-password

# PostgreSQL Database (provided by Render if using render.yaml)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=change-me

# ============================================
# API Keys (configure inside n8n, NOT here)
# ============================================
# HubSpot: Configure OAuth2 credentials in n8n UI
# Kit v4 API Key: Set in the workflow's HTTP Request header
